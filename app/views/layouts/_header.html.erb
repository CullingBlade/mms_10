<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if user_signed_in? && current_user.is_admin? %>
      <%= link_to t("admin_title"), admin_root_path, id: "logo" %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "position.position" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("position.list"), admin_positions_path %></li>
            <li><%= link_to t("position.create"), new_admin_position_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "skill.skill" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("skill.list"), admin_skills_path %></li>
            <li><%= link_to t("skill.create"), new_admin_skill_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "team.team" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("team.list"), admin_teams_path %></li>
            <li><%= link_to t("team.create"), new_admin_team_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "project.project" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("project.list"), "#" %></li>
            <li><%= link_to t("project.create"), new_admin_project_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "csv.csv" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("csv.import"), "#" %></li>
            <li><%= link_to t("csv.export"), "#" %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <%= link_to t("title"), root_path, id: "logo" %>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.email %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("view_profile"), current_user %></li>
            <li>
              <%= link_to t("edit_profile"), edit_user_registration_path %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to t("logout"), destroy_user_session_path, method: "delete" %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(:login), new_user_session_path %></li>
        <li><%= link_to t(:signup), new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>
