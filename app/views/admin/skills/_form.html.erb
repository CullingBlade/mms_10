<%= form_for [:admin, @skill] do |f| %>
  <%= render "shared/skill_error_messages" %>
  <div class="fields">
    <%= f.label :name %><br>
    <%= f.text_area :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t("submit"), class: "btn btn-primary" %>
  </div>
<% end %>
